<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/loc"
    android:background="@android:color/white"
    android:clickable="true">

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/checklocation"
        android:layout_alignTop="@+id/txtViewlocquestion"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right|center_vertical" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/imageViewmap"
        android:src="@drawable/maps"
        android:scaleType="fitXY"
        android:layout_below="@+id/txtViewlocquestion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:layout_gravity="center_horizontal|bottom" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:id="@+id/Btnback"
        android:src="@drawable/back"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="false"
        android:layout_gravity="left|top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location Settings"
        android:id="@+id/txtViewLocation"
        android:layout_below="@+id/Btnback"
        android:layout_alignEnd="@+id/txtViewlocquestion"
        android:layout_gravity="right|top" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="@string/LocationQuestion"
        android:id="@+id/txtViewlocquestion"
        android:textSize="20sp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/locationimage"
        android:layout_alignParentStart="true"
        android:layout_gravity="left|center_vertical" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:id="@+id/locationimage"
        android:src="@drawable/location"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/txtViewLocation"
        android:layout_toEndOf="@+id/Btnback"
        android:layout_gravity="center_horizontal|top" />

</FrameLayout>