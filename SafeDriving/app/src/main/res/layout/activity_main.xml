<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.imperium.autobeacon.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/autoimg"
        android:adjustViewBounds="true"
        android:maxWidth="180dp"
        android:maxHeight="180dp"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/auto"
        android:paddingBottom="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/LoginText"
        android:id="@+id/tvText"
        android:layout_below="@+id/autoimg"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="#0000FF"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tLoginUsername"
        android:layout_below="@+id/tvText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="@string/please_enter_your_driver_id" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/tLoginPassword"
        android:layout_below="@+id/tLoginUsername"
        android:layout_alignParentStart="true"
        android:hint="@string/please_enter_your_driver_password"
        android:layout_alignEnd="@+id/tLoginUsername"
        android:fontFamily="sans-serif" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password"
        android:id="@+id/bForgotPwd"
        android:layout_below="@+id/tLoginPassword"
        android:layout_alignParentStart="true"
        android:textColor="#000000"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New User? Register"
        android:id="@+id/bRegister"
        android:layout_alignTop="@+id/bForgotPwd"
        android:layout_alignEnd="@+id/tLoginPassword"
        android:textColor="#000000"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:id="@+id/bLogin"
        android:textColor="#000000"
        android:layout_below="@+id/bForgotPwd"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>
