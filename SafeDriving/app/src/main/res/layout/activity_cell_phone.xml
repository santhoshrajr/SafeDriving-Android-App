<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.imperium.autobeacon.CellPhoneActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cellphoneimg"
        android:adjustViewBounds="true"
        android:maxWidth="120dp"
        android:maxHeight="120dp"
        android:scaleType="fitCenter"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/cellphone_symbol"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cell-Phone Use"
        android:id="@+id/tVCellPhone"
        android:textSize="25sp"
        android:textColor="#000000"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/cellphoneimg"
        android:paddingLeft="@dimen/activity_vertical_margin"
        />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sPermissionForCellPhoneUse"
        android:layout_below="@id/cellphoneimg"
        android:padding="@dimen/activity_vertical_margin"

        android:text="Is John allowed to use his/her cell phone while the vehicle is moving? "

        />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please send me real-time notifications if John is using their \cell phone while the car is moving?"
        android:id="@+id/textView5"
        android:layout_below="@id/sPermissionForCellPhoneUse"
        android:layout_alignParentStart="true"
        android:padding="@dimen/activity_vertical_margin"
        />


</RelativeLayout>
