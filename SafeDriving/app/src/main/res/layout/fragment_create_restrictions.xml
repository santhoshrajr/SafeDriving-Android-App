<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/tabLayout"
    android:clickable="true"
    android:background="?android:attr/colorBackground"

    tools:context="com.imperium.autobeacon.CreateRestrictions">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvCreateRestriction"
            android:text="Create Driver Restrictions"
            />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCreateRestriction"
            android:id="@+id/listViewRestrictions"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</FrameLayout>
